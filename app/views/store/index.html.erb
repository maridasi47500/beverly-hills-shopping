 <div class="flex justify-between items-center">
   <h1 class="font-bold text-4xl"><%=t('.title_html')%></h1>
           <%= link_to "New product", new_product_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
             </div>
             <ul>
                                                                                             <% @products.each do |product| %>
                                                                                               <li>
                                                                                                                           <%=image_tag(product.image_url, class: 'w-40')%>
                                                                                                                           <div>
                                                                                                                             <h2>
                                                                                                                                                                     <%=product.title%>
                                                                                                                                                                               </h2>
                                                                                                                                                                                         <p>
                                                                                                                                                                                                   <%=sanitize(product.description)%>
                                                                                                                                                                                                             </p>
                                                                                                                                                                                                             <div><%=number_to_currency product.price%>
                                                                                                                                                                                                             <%=button_to t("add_html"), line_items_path(product_id: product)%>
                                                                                                                                                                                                             </div>
                                                                                                                                                                                                             </div>
                                                                                                                                                                                                             </li>

                                                                                                                                                                                                                                                                                                                                   <% end %>
                                                                                                                                                                                                                                                                                                                                         </ul>
                                                                                                                                                                                                                                                                                                                                         </div>
